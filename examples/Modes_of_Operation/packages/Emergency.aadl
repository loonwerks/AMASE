package Emergency
public
with Base_Types;
	system Emergency
		features
			cmd_to_activate : in data port Base_Types::Boolean;
			 
			supply_out : out data port Base_Types::Integer;
		
		annex agree {**
			
			guarantee "If in emergency mode, output is 5. Else it is 0." :
				if cmd_to_activate 
					then (supply_out = 5)
				else (supply_out = 0);
				
		**};	
	end Emergency; 
end Emergency;